<% content_for :head do %>
  <%= javascript_include_tag "keyboard" %>
  <title>Visual keyboards tools</title>
<% end%>

<input id="vk_numbers_target" value="" type="text"></input>
<hr />
<div id="vk_numbers">
  <ul>
    <li class="key">0</li>
    <li class="key">1</li>
    <li class="key">2</li>
    <li class="key">3</li>
  </ul>
  <ul>
    <li class="key">4</li>
    <li class="key">5</li>
    <li class="key">6</li>
    <li class="key">7</li>
  </ul>
  <ul>
    <li class="key">8</li>
    <li class="key">9</li>
    <li class="key" data-key="numpad_p">+</li> <!-- I need to specify the data-key to use for this keyboard shortcut. -->
    <li class="key">-</li>
  </ul>
  <ul>
    <li class="key">*</li>
    <li class="key">/</li>
    <li class="key">.</li>
    <li>&nbsp;</li>
  </ul>
</div>
